void menu()
{
	int n;
	printf("\t\tWelcome To the main Menu\n\n");
	printf("\tSelect the option to Continue\n");
	printf("\t1:Create new account\n");
	printf("\t2:Transaction\n");
	printf("\t3:Details of Existing account\n");
	printf("\t4:Exit");
	scanf("%d",&n);
	switch(n)
	{
		case 1:New();
		break;
		case 2:trans();
		break;
		case 3:details();
		break;
		case 4:close();
		break;
	}
}
int main()
{
	char pass[10],password[10]="mycap";
	printf("\n\tEnter the password\n");
	scanf("%s",pass);
	if(strcmp(pass,password)==0)
	{
		printf("Welcome\n\n");
		for(i=0;i<=6;i++)
        {
            fordelay(100000000);
            printf(".");
        }
                system("cls");
		menu();
	}
	else
	{
		printf("wrong password");
	}
	return 0;
}
